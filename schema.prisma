datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id    Int    @id @default(autoincrement())
    name  String
    age   Int
    posts Post[]
}

model Post {
    id      Int    @id @default(autoincrement())
    title   String
    content String
    likes   Int
    user    User   @relation(fields: [userId], references: [id])
    userId  Int
}
